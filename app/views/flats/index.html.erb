<div class="wrapper">
  <div class="container">
    <h1>Flats</h1>

    <div class="row">

          <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-category"><%= flat.name %></div>
              <div class="card-description">
                <h2><%= flat.address %></h2>
                <p>Price: <%= flat.price_per_night %>  Guests: <%= flat.number_of_guests %></p>

              </div>
          </div>
            <div class="info"><%= link_to "More info", flat_path(flat) %></div>
      </div>
        <% end %>

    </div>
    <p> <%= link_to "+ Create a new flat", new_flat_path %></p>
  </div>
</div>


